<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FinalActivity"
    android:background="@drawable/blue_gradient">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ourRecommendation"
            android:textSize="20sp"
            android:textColor="#111"
            android:gravity="center"
            android:text="We recommend you to choose plan "
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RadioGroup
            android:id="@+id/rad_grp_goals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rad_fat_loss"
                android:textSize="15sp"
                android:text="FitDiabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Our other Plans are"
               android:textSize="25sp"
               android:textStyle="bold"
               android:paddingBottom="20dp"
               android:paddingTop="15dp"/>
            <RadioButton
                android:id="@+id/rad_weight_gain"
                android:textSize="15sp"
                android:text="FitHtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rad_muscle_building"
                android:textSize="15sp"
                android:text="FitThyroid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>


        <Button
            android:id="@+id/btn_get_workout"
            android:layout_marginTop="30dp"
            android:text="Get your personalized workout plan"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_get_diet"
            android:layout_marginTop="10dp"
            android:text="Get your personalized diet plan"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>














</ScrollView>
