<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DietQuestionsActivity"
    android:background="@drawable/blue_gradient">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_level"
            android:textSize="45sp"
            android:textColor="#111"
            android:gravity="center"
            android:text="ADVANCED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="30dp"
            android:text="Health Condition ?"
            android:textSize="22sp"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rad_grp_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rad_fat_loss"
                android:textSize="15sp"
                android:text="Diabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rad_weight_gain"
                android:textSize="15sp"
                android:text="Hypertension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rad_muscle_building"
                android:textSize="15sp"
                android:text="Thyroid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </RadioGroup>

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#111"
            android:textSize="22sp"
            android:text="Meals Type : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rad_grp_meals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rad_veg"
                android:textSize="15sp"
                android:text="Vegetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rad_non_veg"
                android:textSize="15sp"
                android:text="Non-vegetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#111"
            android:textSize="22sp"
            android:text="Do you take any Medicines?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rad_grp_suppl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rad_yes"
                android:textSize="15sp"
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rad_no"
                android:textSize="15sp"
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>


        <Button
            android:id="@+id/btn_get_workout"
            android:layout_marginTop="30dp"
            android:text="Get your personalized workout plan"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_get_diet"
            android:layout_marginTop="10dp"
            android:text="Get your personalized diet plan"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>




</ScrollView>
